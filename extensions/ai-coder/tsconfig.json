{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./out",
        "jsx": "react",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020", "dom"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "../../src/vscode-dts/vscode.d.ts"
    ],
    "exclude": [
        "node_modules",
        "out",
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
